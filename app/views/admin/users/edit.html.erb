<div class="container">
  <div class="d-flex justify-content-center">
    <div class="col-md-6">
      <h3>会員情報編集</h3>

      <%= form_with model:@user, url: admin_user_path(@user.id) do |f| %>

      <div class="form-group">
        <%= f.label :アイコン画像 %>
        <%= f.file_field :icon_image, class: "form-control", placeholder: "アイコン画像", accept: "image/*" %>
      </div>

      <div class="form-group">
        <%= f.label :ヘッダー画像 %>
        <%= f.file_field :header_image, class: "form-control", placeholder: "ヘッダー画像", accept: "image/*" %>
      </div>

      <div class="form-group">
        <%= f.label :ユーザーネーム %>
        <%= f.text_field :name, class: "form-control", autofocus: true, placeholder: "アース" %>
      </div>

      <div class="form-group">
        <%= f.label :自己紹介 %>
        <%= f.text_area :introduction, class: "form-control", autofocus: true, placeholder: "はじめましてよろしくお願いいたします。", rows: 5 %>
      </div>
      
      <div class="form-group">
          <%= f.label :退会ステータス %><br>
          <%= f.collection_radio_buttons :is_deleted, [[true, '退会済'], [false, '非退会']], :first, :last %>
      </div>
      
      <div class="d-flex justify-content-center">
        <div class="d-flex flex-column align-items-center">
          <%= f.submit "編集内容を保存", class: "btn btn-success" %>
         <!--   link_to "退会する", users_check_path, class: "btn btn-danger"  --> 
        </div>
      </div>

      <% end %>
    </div>
  </div>
</div>