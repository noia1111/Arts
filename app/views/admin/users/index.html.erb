<div class="container">
  <div class="row justify-content-center">
    <% if @users.exists? %>
      <div class="col-md-8">
        <div class="table-responsive">
          <table class="table table-hover table-inverse">
            <thead>
              <tr>
                <th>Image</th>
                <th>name</th>
                <th>メールアドレス</th>
                <th>詳細</th>
              </tr>
            </thead>
            <tbody>
              <% @users.each do |user| %>
                <tr>
                  <td><%= image_tag user.get_icon_image(50, 50) %></td>
                  <td><%= user.name %></td>
                  <td><%= user.email %></td>
                  <td><%= link_to '詳細', admin_user_path(user.id) %></td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    <% else %>
      <div class="col-md-8">
        <p class="text-center">ユーザーはいません</p>
      </div>
    <% end %>
  </div>
</div>