         <div class="form-group">
           <%= f.text_area :comment, rows: '5', placeholder: "コメントをここに" %>
         </div>

         <div class="form-group">
           <%= f.submit "送信する", class: "btn btn-primary" %>
         </div>
       <% end %>
      <% end %>