<div class="container">
  <div class="d-flex justify-content-center">
    <div class="col-md-8 offset-md-1">
      <h2><%= @painting.title %></h2>
      <div>
        <%= flash[:notice] %>
      </div>

        <div class="form-group">
            <%= image_tag @painting.get_image(512,512) %>
        </div>
        <% if @painting.caption.present? %>
        <h4>説明<br>
          <%= @painting.caption %></h4>
        <% end %>
        <div class="row">
          <div class="col form-group">
            <%= link_to user_path(@painting.user) do %>
              <%= image_tag @painting.user.get_icon_image(100,100),style: "border-radius: 50%; border: 4px solid #6D9295; box-shadow: 0 0 6px grey; overflow: hidden;" %><br>
              <%= @painting.user.name %>
            <% end %>
          </div>

          <div id = "favorite_<%= @painting.id %>" class = "col" style="font-size: 40px;">
            <%= render partial: "public/favorites/favorite", locals: { painting: @painting }, remote: true %>
          </div>
        </div>
        <% if @painting.user == current_user %>
          <div class="form-group">
            <%= link_to '投稿を編集する', edit_painting_path(@painting), class:"btn edit-button" %>
            <%= link_to '投稿を削除する', @painting, method: :delete, data: { confirm: '本当に消しますか？' }, class: "centered-text btn btn-sm btn-danger delete-btn" %>

          </div>
        <% end %>

        <div class="form-group">
          コメント件数：<%= @painting.painting_comments.count %>
        </div>

        <table>
          <% @painting.painting_comments.each do |painting_comment| %>
            <tr>
              <td>
                <%= link_to user_path(painting_comment.user) do %>
                  <%= image_tag painting_comment.user.get_icon_image(100,100) %><br>
                  <%= painting_comment.user.name %>
                <% end %>
              </td>
              <td>
                <%= painting_comment.comment %>
              </td>
              <% if painting_comment.user == current_user %>
                <td>
                  <%= link_to painting_painting_comment_path(painting_id: @painting.id, id: painting_comment.id), method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn btn-sm btn-danger" do %>
                  <i class="fa-sharp fa-solid fa-trash"></i>
                  <% end %>
                </td>
              <% end %>
            </tr>
          <% end %>
        </table>
      <% if user_signed_in? %>
       <%= form_with model: [@painting, @painting_comment] do |f| %>
         <div class="form-group">
           <%= f.text_area :comment, rows: '5', placeholder: "コメントをここに" %>
         </div>

         <div class="form-group">
           <%= f.submit "送信する", class: "btn btn-primary" %>
         </div>
       <% end %>
      <% end %>
    </div>
  </div>
</div>