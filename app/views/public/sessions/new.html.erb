<div class="container">
  <div class="d-flex justify-content-center">
    <div class="col-md-6">
      <h3>ログイン</h3>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

        <div class="form-group">
          <%= f.label :メールアドレス %>
          <%= f.email_field :email, class: "form-control", autofocus: true, autocomplete: "email" %>
        </div>

        <div class="form-group">
          <%= f.label :パスワ－ド %>
          <%= f.password_field :password, class: "form-control", autocomplete: "current-password" %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="form-group">
            <div class="form-check"> <!-- チェックボックスを使うためにform-checkクラスを追加 -->
              <%= f.check_box :remember_me, class: "form-check-input" %>
              <%= f.label :remember_me, class: "form-check-label" %>
            </div>
          </div>
        <% end %>

        <div class="actions">
          <%= f.submit "ログイン", class: "btn btn-primary" %>
        </div>

      <% end %>

      <%= render "public/shared/links" %>
    </div>
  </div>
</div>
