<% if admin_signed_in? %>      
  <div class="search_form">
  <%= form_with url: admin_searches_search_path, local: true, method: :get do |f| %>
    <%= f.text_field :word %>
    <%= f.select :range, options_for_select([['作品検索'], ['クリエイター検索']]) %>
    <%= f.submit "検索", class: "btn btn-pink" %>
  <% end %>
  </div>
<% else %>
  <div class="search_form">
  <%= form_with url: searches_search_path, local: true, method: :get do |f| %>
    <%= f.text_field :word %>
    <%= f.select :range, options_for_select([['作品検索'], ['クリエイター検索']]) %>
    <%= f.submit "検索", class: "btn btn-pink" %>
  <% end %>
  </div>
<% end %>