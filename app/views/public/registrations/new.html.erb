<div class="container">
  <div class="d-flex justify-content-center">
    <div class="col-md-6">
      <h3>Sign up</h3>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "public/shared/error_messages", resource: resource %>

        <div class="form-group">
          <%= f.label :メールアドレス %>
          <%= f.text_field :email, class: "form-control", autofocus: true, placeholder: "Arts@gmail.com" %>
        </div>

        <div class="form-group">
          <%= f.label :ユーザーネーム %>
          <%= f.text_field :name, class: "form-control", autofocus: true, placeholder: "アース" %>
        </div>

        <div class="form-group">
          <%= f.label :性別 %><br>
          <%= f.collection_radio_buttons :is_male, [[true, '男'], [false, '女']], :first, :last %>
        </div>

        <div class="form-group">
          <%= f.label :年齢 %>
          <%= f.text_field :age, class: "form-control", autofocus: true, placeholder: "20" %>
        </div>

        <div class="form-group">
          <%= f.label :password %>
          <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %>
          <%= f.password_field :password, class: "form-control", autocomplete: "new-password" %>
        </div>

        <div class="form-group">
          <%= f.label :password_confirmation %>
          <%= f.password_field :password_confirmation, class: "form-control", autocomplete: "new-password" %>
        </div>

        <div class="actions">
          <%= f.submit "新規登録", class: "btn btn-primary" %>
        </div>
      <% end %>

      <%= render "public/shared/links" %>
    </div>
  </div>
</div>
